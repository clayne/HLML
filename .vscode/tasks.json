	"version": "2.0.0",
	"tasks": [
		{
			"label": "build generator - debug",
			"type": "process",
			"command": "build.bat",
			"args": [
				"hlml-gen",
				"debug",
				"code\\generator"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},

		{
			"label": "build tests - debug",
			"type": "process",
			"command": "build.bat",
			"args": [
				"hlml-gen-test",
				"debug",
				"code\\tests"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}